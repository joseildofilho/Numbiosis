<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".modules.three.fragments.MidpointMethodFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/configure_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:text="@string/str_configure_PVI"
                android:textAlignment="center"
                android:textAppearance="@android:style/TextAppearance.WindowTitle"
                android:textColor="@color/colorText"
                android:textSize="24sp" />

            <include
                layout="@layout/utils_pvi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp" />

            <Button
                android:id="@+id/calculate_button"
                style="@android:style/Widget.DeviceDefault.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:text="@string/str_calculate"
                android:textAppearance="@android:style/TextAppearance.WindowTitle"
                android:textColor="@color/colorText"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/iterations"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:fontFamily="sans-serif-condensed"
                android:textAlignment="center"
                android:textAppearance="@android:style/TextAppearance.WindowTitle"
                android:textColor="@color/colorDetail"
                android:textSize="24sp" />

        </LinearLayout>
    </ScrollView>

</FrameLayout>